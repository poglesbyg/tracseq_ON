{
  "extends": "@ocavue/tsconfig/dom/app.json",
  "include": ["./**/*", "./.astro/**/*"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "module": "ES2022",
    "target": "ES2022",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "references": [
    {
      "path": "../../packages/api/tsconfig.json"
    },
    {
      "path": "../../packages/db/tsconfig.json"
    },
    {
      "path": "../../packages/utils/tsconfig.json"
    }
  ]
}
