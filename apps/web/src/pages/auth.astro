---
import { SignIn } from '@/components/sign-in'
import Layout from '@/layouts/layout.astro'
export const prerender = true
---

<Layout title="Sign In">
  <div class="min-h-screen bg-background">
    <!-- UNC Utility Bar -->
    <div class="bg-slate-600 text-white text-sm py-2 px-4">
      <div class="container mx-auto flex justify-between items-center">
        <div class="text-xs">
          The University of North Carolina at Chapel Hill
        </div>
        <nav class="flex space-x-4">
          <a
            href="https://accessibility.unc.edu/report-a-barrier/"
            target="_blank"
            class="text-white hover:text-blue-200">Accessibility</a
          >
          <a
            href="https://events.unc.edu/"
            target="_blank"
            class="text-white hover:text-blue-200">Events</a
          >
          <a
            href="https://library.unc.edu/"
            target="_blank"
            class="text-white hover:text-blue-200">Libraries</a
          >
          <a
            href="https://maps.unc.edu/"
            target="_blank"
            class="text-white hover:text-blue-200">Maps</a
          >
          <a
            href="https://www.unc.edu/departments/"
            target="_blank"
            class="text-white hover:text-blue-200">Departments</a
          >
          <a
            href="https://connectcarolina.unc.edu/"
            target="_blank"
            class="text-white hover:text-blue-200">ConnectCarolina</a
          >
        </nav>
      </div>
    </div>

    <div
      class="flex min-h-screen items-center justify-center bg-muted p-6 md:p-10"
    >
      <SignIn client:load />
    </div>
  </div>
</Layout>
