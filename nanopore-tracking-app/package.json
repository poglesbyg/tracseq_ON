{
  "name": "nanopore-tracking-app",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Nanopore Tracking Application - separated from monorepo with PDF parsing fixes",
  "scripts": {
    "dev": "astro dev --port 3001",
    "build": "astro build",
    "preview": "astro preview --port 3001",
    "astro": "astro",
    "lint": "tsc --noEmit",
    "lint:fix": "pnpm lint && pnpm format",
    "format": "prettier --write .",
    "db:setup": "node scripts/setup-database.js",
    "db:migrate": "node scripts/setup-database.js",
    "setup": "node scripts/setup-complete.js",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "postinstall": "astro sync",
    "clean": "rm -rf .astro",
    "test:watch": "vitest",
    "start": "node dist/server/entry.mjs",
    "deploy": "scripts/deploy-openshift.sh",
    "deploy:staging": "scripts/deploy-openshift.sh --env staging",
    "deploy:production": "scripts/deploy-openshift.sh --env production",
    "deploy:quick": "scripts/deploy-openshift.sh --skip-tests",
    "rollback": "scripts/deploy-openshift.sh --rollback"
  },
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.74.9",
    "@trpc/client": "^11.1.2",
    "@trpc/react-query": "^11.1.2",
    "@trpc/server": "^11.1.2",
    "@types/nodemailer": "^6.4.17",
    "better-auth": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "kysely": "^0.28.2",
    "lodash-es": "^4.17.21",
    "lodash.throttle": "^4.1.1",
    "lucide-react": "^0.503.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.5",
    "ollama": "^0.5.16",
    "pdf-parse": "1.1.1",
    "pg": "^8.16.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.56.4",
    "sonner": "^2.0.3",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.2.0",
    "type-fest": "^4.41.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@astrojs/node": "^9.2.1",
    "@astrojs/react": "^4.2.7",
    "@astrojs/tailwind": "^6.0.2",
    "@playwright/test": "^1.54.1",
    "@types/lodash-es": "^4.17.12",
    "@types/lodash.throttle": "^4.1.9",
    "@types/node": "^24.0.13",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/unist": "^3.0.3",
    "@vitejs/plugin-react": "^4.4.1",
    "astro": "^5.9.0",
    "autoprefixer": "^10.4.21",
    "import-meta-resolve": "^4.1.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.2.8",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
